{
    "manifest_version": 3,

    "name": "草 Converter",
    "description": "YouTube Liveのコメントの草をlolに変換",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["js/vendor.js", "js/content_script.js"]
        }
    ],

    "permissions": ["storage"],

    "host_permissions": ["<all_urls>"]
}
